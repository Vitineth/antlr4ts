{
  "compilerOptions": {
    "outDir": "target",
    "sourceMap": true,
    "inlineSources": true,
    "module": "commonjs",
    "target": "es2016",
    "lib": [
      "es6",
      "es2015",
      "es2015.promise",
      "dom"
    ],
    "noImplicitAny": true,
    "strict": true,
    "declaration": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules",
    "target"
  ]
}
